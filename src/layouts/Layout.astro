---
import { SEO } from "astro-seo";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

const { pageTitle, pageDescription, pageTitleOG, OGType } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <SEO
      title={pageTitle}
      description={pageDescription}
      openGraph={{
        basic: {
          title: `${pageTitleOG}`,
          type: `${OGType}`,
          image: "/ps-card1.png",
          url: "https://planningseries.fr/",
        },
        optional: {
          siteName: "Planning Séries",
          description: "Toutes les dates de sortie des séries",
        },
      }}
      twitter={{
        card: "summary_large_image",
        creator: "@nick59",
        site: "@seriestvnews",
        title: `${pageTitleOG}`,
        image: "/ps-card2.png",
        imageAlt: "Planning Séries card",
      }}
    />

    <meta charset="UTF-8" />
    <!-- <meta
      name="description"
      content="Dans ce calendrier, retrouvez toutes les dates de sorties des séries en France"
    /> -->
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <!-- <title>{pageTitle}</title> -->
    <ViewTransitions />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="overflow-y-scroll">
    <div class="w-full sticky top-0 z-10 shadow-md">
      <Header />
    </div>

    <div class="max-w-7xl mx-auto text-gray-800">
      <slot />
      <Footer />
    </div>
  </body>
</html>
