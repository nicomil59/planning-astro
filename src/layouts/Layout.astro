---
import { SEO } from "astro-seo";

import Header from "../components/Header.astro";
import Footer from "../components/footer/Footer.astro";
import { ViewTransitions } from "astro:transitions";

const { pageTitle, pageDescription, pageTitleOG, OGType } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-MVLZP403HL">
    </script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-MVLZP403HL");
    </script>

    <!-- Astro SEO code -->
    <SEO
      title={pageTitle}
      description={pageDescription}
      canonical={`https://planningseries.fr${Astro.url.pathname}`}
      openGraph={{
        basic: {
          title: `${pageTitleOG}`,
          type: `${OGType}`,
          image: "/ps-card1.png",
          url: "https://planningseries.fr/",
        },
        optional: {
          siteName: "Planning Séries",
          description: "Toutes les dates de sortie des séries",
        },
      }}
      twitter={{
        creator: "@nick59"
      }}
      extend={{
        // extending the default meta tags
        meta: [
          { name: "twitter:card", content: "summary_large_image" },
          { name: "twitter:site", content: "@seriestvnews" },
          { name: "twitter:title", content: `${pageTitleOG}` },
          { name: "twitter:image",content: "https://planningseries.fr/ps-card2.png" },
          { name: "twitter:imageAlt",content: "Planning séries card" },
          { name: "twitter:description", content: "Toutes les dates de sortie des séries" }
        ],
      }}
    />

    <script>
      if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
        const darkModeButton = document.querySelector('.dark-mode-button');
        darkModeButton.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-gray-300">
          <path d="M12 17.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 1.5a7 7 0 1 0 0-14 7 7 0 0 0 0 14zm12-7a.8.8 0 0 1-.8.8h-2.4a.8.8 0 0 1 0-1.6h2.4a.8.8 0 0 1 .8.8zM4 12a.8.8 0 0 1-.8.8H.8a.8.8 0 0 1 0-1.6h2.5a.8.8 0 0 1 .8.8zm16.5-8.5a.8.8 0 0 1 0 1l-1.8 1.8a.8.8 0 0 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM6.3 17.7a.8.8 0 0 1 0 1l-1.7 1.8a.8.8 0 1 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM12 0a.8.8 0 0 1 .8.8v2.5a.8.8 0 0 1-1.6 0V.8A.8.8 0 0 1 12 0zm0 20a.8.8 0 0 1 .8.8v2.4a.8.8 0 0 1-1.6 0v-2.4a.8.8 0 0 1 .8-.8zM3.5 3.5a.8.8 0 0 1 1 0l1.8 1.8a.8.8 0 1 1-1 1L3.5 4.6a.8.8 0 0 1 0-1zm14.2 14.2a.8.8 0 0 1 1 0l1.8 1.7a.8.8 0 0 1-1 1l-1.8-1.7a.8.8 0 0 1 0-1z" />
        </svg>
        `;
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>

    <script>
      document.addEventListener('astro:after-swap', () => {
        //console.log('AFTER-SWAP')
        if (localStorage.theme === 'dark') {
          document.documentElement.classList.add('dark');

          const darkModeButton = document.querySelector('.dark-mode-button');
          darkModeButton.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-gray-300">
          <path d="M12 17.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 1.5a7 7 0 1 0 0-14 7 7 0 0 0 0 14zm12-7a.8.8 0 0 1-.8.8h-2.4a.8.8 0 0 1 0-1.6h2.4a.8.8 0 0 1 .8.8zM4 12a.8.8 0 0 1-.8.8H.8a.8.8 0 0 1 0-1.6h2.5a.8.8 0 0 1 .8.8zm16.5-8.5a.8.8 0 0 1 0 1l-1.8 1.8a.8.8 0 0 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM6.3 17.7a.8.8 0 0 1 0 1l-1.7 1.8a.8.8 0 1 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM12 0a.8.8 0 0 1 .8.8v2.5a.8.8 0 0 1-1.6 0V.8A.8.8 0 0 1 12 0zm0 20a.8.8 0 0 1 .8.8v2.4a.8.8 0 0 1-1.6 0v-2.4a.8.8 0 0 1 .8-.8zM3.5 3.5a.8.8 0 0 1 1 0l1.8 1.8a.8.8 0 1 1-1 1L3.5 4.6a.8.8 0 0 1 0-1zm14.2 14.2a.8.8 0 0 1 1 0l1.8 1.7a.8.8 0 0 1-1 1l-1.8-1.7a.8.8 0 0 1 0-1z" />
          </svg>
        `;
        }
        
      });
    </script>

    <meta charset="UTF-8" />
    <!-- <meta
      name="description"
      content="Dans ce calendrier, retrouvez toutes les dates de sorties des séries en France"
    /> -->
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <!-- <title>{pageTitle}</title> -->
    <ViewTransitions fallback="none"/>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="overflow-y-scroll dark:bg-darkbg-950 transition-colors duration-300">
    <div class="w-full sticky top-0 z-10 shadow-md">
      <Header />
    </div>

    <div class="max-w-7xl mx-auto text-gray-800 dark:text-darktext-200">
      <slot />
      <Footer />
    </div>
  </body>
</html>
