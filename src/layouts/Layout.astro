---
import { SEO } from "astro-seo";

import Header from "../components/Header.astro";
import Footer from "../components/footer/Footer.astro";
import { ViewTransitions } from "astro:transitions";

const { pageTitle, pageDescription, pageTitleOG, OGType } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-MVLZP403HL"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-MVLZP403HL");
    </script>

    <!-- Astro SEO code -->
    <SEO
      title={pageTitle}
      description={pageDescription}
      canonical={`https://planningseries.fr${Astro.url.pathname}`}
      openGraph={{
        basic: {
          title: `${pageTitleOG}`,
          type: `${OGType}`,
          image: "/ps-card1.png",
          url: "https://planningseries.fr/",
        },
        optional: {
          siteName: "Planning Séries",
          description: "Toutes les dates de sortie des séries",
        },
      }}
      twitter={{
        creator: "@nick59"
      }}
      extend={{
        // extending the default meta tags
        meta: [
          { name: "twitter:card", content: "summary_large_image" },
          { name: "twitter:site", content: "@seriestvnews" },
          { name: "twitter:title", content: `${pageTitleOG}` },
          { name: "twitter:image",content: "https://planningseries.fr/ps-card2.png" },
          { name: "twitter:imageAlt",content: "Planning séries card" },
          { name: "twitter:description", content: "Toutes les dates de sortie des séries" }
        ],
      }}
    />

    <meta charset="UTF-8" />
    <!-- <meta
      name="description"
      content="Dans ce calendrier, retrouvez toutes les dates de sorties des séries en France"
    /> -->
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <!-- <title>{pageTitle}</title> -->
    <ViewTransitions />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="overflow-y-scroll">
    <div class="w-full sticky top-0 z-10 shadow-md">
      <Header />
    </div>

    <div class="max-w-7xl mx-auto text-gray-800">
      <slot />
      <Footer />
    </div>
  </body>
</html>
