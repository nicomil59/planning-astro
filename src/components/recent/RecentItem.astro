---
const { Date, Titre, Saison, Plateforme } = Astro.props;

console.log(Date)
---

<div class="relative flex flex-col md:grid md:grid-cols-[0.5fr_2fr_1fr_1fr] md:items-center bg-notiongray-50 dark:bg-darkbgBrown-950 text-xs md:text-sm px-3 md:px-4 py-3 md:py-2 rounded w-full sm:w-9/12 md:w-full">
  <div class="mb-1 md:mb-0">{Date.split("/").slice(0,2).join("/")}</div>
  <div class="mb-1 md:mb-0 font-medium text-sm">{Titre}</div>
  <div class="mb-0">{Saison}</div>
  <!-- <div class="place-self-end md:place-self-auto"> -->
  <div class="absolute bottom-3 right-2 md:static">
    <span class="text-xs px-2 py-1 bg-notionyellow-200 dark:bg-notionyellow-300 dark:text-gray-800 rounded">{Plateforme}</span>
  </div>
</div>
