---
const { Titre, Saison, Pays, Heure, Note } = Astro.props;

const listePays = Pays.split(', ');
---

<div class="max-w-3xl text-sm sm:text-base rounded p-2 my-1">
    <div class="flex gap-3 flex-wrap">
      {Heure === "00:00:00" ? "" : <span class="font-semibold text-notionyellow-600 dark:text-notionyellow-300">{Heure.slice(0,5)}</span>}
      <div class="font-semibold">{Titre}</div>
      <div class="">{Saison}</div>
      <div class="flex gap-2 items-center">
        {listePays.map(pays => <span class="bg-notionyellow-100 text-xs font-medium px-2.5 py-0.5 rounded-sm dark:text-darktext-200 dark:bg-darkbgBrown-700">{pays}</span>)}
      </div>
    </div>
      {Note !== null && (
        <>
          <hr class="my-1" />
          <div class="italic text-sm">{Note}</div>
        </>
      )}
</div>